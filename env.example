# Server Configuration
PORT=3000
NODE_ENV=development

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_SITE_URL=https://your-site.com
OPENROUTER_SITE_NAME=Your Site Name

# Model Configuration
MODEL_MAX_TOKENS=4000
MODEL_TEMPERATURE=0.7
MODEL_RETRY_ATTEMPTS=3
MODEL_RETRY_DELAY_MS=1000

# Cost Tracking (ENABLED by default for production monitoring)
COST_TRACKING_ENABLED=true
COST_ALERT_THRESHOLD=10.0  # USD threshold for cost alerts

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Security Configuration
API_SECRET_KEY=your_secure_random_string_32_chars_min
ALLOWED_ORIGINS=*

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional Configuration
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=30000 